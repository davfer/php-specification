{
    "name": "davfer/php-specification",
    "description": "A simple library to implement specification pattern to your project",
    "type": "library",
    "version": "1.0.0",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhpSpecification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpSpecification\\Test\\": "test/"
        }
    },
    "authors": [
        {
            "name": "davfer",
            "email": "paido2005@gmail.com"
        }
    ],
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.2"
    },
    "require": {
        "php": "^8.1"
    },
    "suggest": {
        "davfer/php-specification-doctrine": "To use Specification pattern with Doctrine ORM",
    }
}
